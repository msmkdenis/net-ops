# Custom IPS/IDS rules
{% for rule in suricata_ips_custom_rules %}
{{ rule }}
{% endfor %}

# Additional security rules
alert tcp any any -> any any (msg:"[IDS] Possible SSH Brute Force"; flow:established; content:"SSH"; threshold: type threshold, track by_src, count 5, seconds 60; sid:1000001; rev:1;)
alert tcp any any -> any 22 (msg:"[IDS] SSH Connection Attempt"; flow:to_server; sid:1000002; rev:1;)